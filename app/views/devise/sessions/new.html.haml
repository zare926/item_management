.main
  %img.main__image{src: 'https://images.unsplash.com/photo-1505248254168-1de4e1abfa78?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1949&q=80'}
    .main__name
      Item Management.
  .rogin__area
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .rogin__area--email
        = f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス"
      .rogin__area--password
        = f.password_field :password, autocomplete: "current-password",placeholder: "パスワード"
      - if devise_mapping.rememberable?
        .rogin__area--remember
          = f.check_box :remember_me, class: "rogin__area--remember-check"
          = f.label :ログイン状態を保存する, class: "rogin__area--remember-label"
      .rogin
        = f.submit "ログイン" , class: "rogin__btn"
      = render "devise/shared/links"