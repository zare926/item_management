%ul.top__contents--image
  %li
  %li
  %li
  %li
  %li
  .top__left
    .top__left--time
      %p.top__left--time-real
    .top__left--weather
      .top__info
      .top__left--weather-city
      .top__left--weather-information
    .top__left--register
      - if user_signed_in?
        = link_to "ログアウト" ,destroy_user_session_path,method: :delete,class: "top__left--register-btn"
      - else
        = link_to "ログイン", new_user_session_path, class: "top__left--register-btn"
  .top__right
    .top__right--area
      - if user_signed_in? 
        .top__right--area-name
          - if @user.iconimage.present?
            = link_to image_tag(@user.iconimage.url ,size: "60x60",class: "iconimage"),user_path(@user.id)
            .top__right--area-name-right
              #{@user.nickname} shoes!!
          - else
            = link_to image_tag(asset_path('iconnew1.png'),size:"60x60",class:"iconimage"),user_path(@user.id)
            .top__right--area-name-right
              #{@user.nickname} shoes!!
        = link_to "HOME", root_path,method: :get,class:"top__right--area-btn"
        = form_with(url: users_searches_path, local: true, method: :get,class: "search") do |s|
          = s.text_field :keyword, placeholder: "Userを検索する", class: "search-input"
          = s.submit class:"search-submit"
        = image_tag asset_path('search1.png'),size:"40x40",class:"search-btn"
      - else
        .top__right--area-name
          - if @user.iconimage.present?
            = link_to image_tag(@user.iconimage.url ,size: "60x60",class: "iconimage"),user_path(@user.id)
            .top__right--area-name-right
              #{@user.nickname} shoes!!
          - else
            = link_to image_tag(asset_path('iconnew1.png'),size:"60x60",class:"iconimage"),user_path(@user.id)
            .top__right--area-name-right
              #{@user.nickname} shoes!!
        = link_to "New User!!", new_user_registration_path, class: "top__right--area-btn"
    .top__right--item
      .top__right--item-sunny 
        .weather-box
          = image_tag asset_path('sun1.png'),size:"25x25",class:"weatherimage"
          %p Sunny Shoes Show
        - @items.each do |i|
          - if i.weather == 0 and i.status == "unused"
            .image_box
              .item__name
                = i.name
                = image_tag i.image.url,class:'image',size:'140x140'
                = link_to 'Show', item_path(i.id), method: :get,class:'show__btn'
      .top__right--item-border
      .top__right--item-rainy
        .weather-box
          = image_tag asset_path('rain1.png'),size:"25x25",class:"weatherimage"
          %p Raniy Shoes Show
        - @items.each do |i|
          - if i.weather == 1 and i.status == "unused"
            .image_box
              .item__name
                = i.name
                = image_tag i.image.url,class:'image',size:'140x140'
                = link_to 'Show', item_path(i.id), method: :get,class:'show__btn'
      .top__right--item-border
      .top__right--item-recovery
        .weather-box
          = image_tag asset_path('zzz.png'),size:"25x25",class:"weatherimage"
          %p Recovery Shoes Show
        - @items.each do |i|
          - if i.status == "used"
            .image_box
              .item__name
                = i.name
                = image_tag i.image.url,class:'image',size:'140x140'
                = link_to 'Show', item_path(i.id), method: :get,class:'show__btn'
              .time
                = (i.updated_at+i.limit.minutes).strftime("%Y-%m-%d %H:%M:%S")
