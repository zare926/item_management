.top__contents--image
  = image_tag asset_path('IMindex7.jpeg'),class:"top__contents--image-back"
  .top__left
    .top__left--time
      %p.top__left--time-real
    .top__left--weather
      .top__info
      .top__left--weather-city
      .top__left--weather-information
    = link_to "ログアウト" ,destroy_user_session_path,method: :delete,class: "top__left--register"
  .top__right
    .top__right--area
      .top__right--area-name
        - if @user.iconimage.present?
          = link_to image_tag(@user.iconimage.url ,size:"60x60",class:"iconimage"),user_path(@user.id)
          .top__right--area-name-right
            登録情報編集
        - else
          = link_to image_tag(asset_path('iconnew1.png'),size:"60x60",class:"iconimage"),user_path(@user.id)
          .top__right--area-name-right
            登録情報編集
        .top__right--area-name-window
          .window__area
            .window__area--name
              #{@user.nickname}
            - if @user.iconimage.present?
              = link_to image_tag(@user.iconimage.url ,size:"120x120",class:"window__area--image"),user_path(@user.id)
            - else
              = link_to image_tag(asset_path('iconnew1.png'),size:"120x120",class:"window__area--image"),user_path(@user.id)
            %p.window__area--number 靴の所持数 #{@item_number.length}足
            %p.window__area--favorite お気に入りの靴の数 #{@item_favorite.length}足
            .window__area--mypage
              = link_to "マイページ",user_path(@user.id),class:"window__area--mypage-zone"
            .window__area--logout
              = link_to "ログアウト",destroy_user_session_path,method: :delete,class: "window__area--logout-zone"
      = render partial:"shared/search"
      = link_to "トップ", root_path,method: :get,class:"top__right--area-btn"
    .edit-top__right--item
      .edit-top__right--item-form
        .edit-top__right--item-form-name
          Please edit!
        .edit-top__right--item-form-border
        .edit-top__right--item-form-info
          登録した情報の修正
        .edit-top__right--item-form--border
        = form_with(model: @item, local: true) do |f|
          .edit-top__right--item-form-box
            品名
            = f.text_field :name, class: 'edit-top__right--item-form-box-shoes', placeholder: '40文字まで'
          .edit-top__right--item-form-box
            その他
            = f.text_area :text, class: 'edit-top__right--item-form-box-shoesohter',placeholder: '補足'
            .edit-top__right--item-form-box
            晴れ用か雨用か洗濯してください
            = f.select :weather, [["晴れの日用", 0],["雨の日用", 1]],{}, {class: 'edit-top__right--item-form-box-shoesweather'}
            .edit-top__right--item-form-box
            サイズ
            = f.select :size, Item.sizes.keys ,{}, {class: 'edit-top__right--item-form-box-shoessize'}
          .edit-top__right--item-form-right
            = image_tag @item.image.url ,class:'edit-top__right--item-form-right-box'
            = f.file_field :image, class: 'edit-top__right--item-form-right-boximage'
            = f.submit "登録" ,class: 'edit-top__right--item-form-rightbtn'